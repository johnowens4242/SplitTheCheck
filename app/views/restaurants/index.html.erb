<p id="notice"><%= notice %></p>

<header>
  <h1>Check Split Check</h1>
</header>

<h1>Restaurants</h1>

<%= form_with url: "/restaurants", method: :get do |form| %>
  <h3>Name</h3>
  <%= form.text_field :name %>
  <h3>Location</h3>
  <%= form.text_field :location %>
  <%= form.submit "Search" %>
<% end %>
<%= link_to 'Add Restaurant', new_restaurant_path %>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Name &nbsp &nbsp</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to 'Will Split', restaurants_will_split_path(restaurant) %></td>
        <td><%= restaurant.countWillSplit %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.countWillNotSplit %></td>
        <td><%= link_to 'Will Not Split', restaurants_will_not_split_path(restaurant) %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Favorite', restaurants_favorite_path(restaurant) %></td>
        <td><%= link_to 'Comments', restaurants_comment_path(restaurant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
