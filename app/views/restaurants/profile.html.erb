<p id="notice"><%= notice %></p>

<header>
  <h1>Check Split Check</h1>
</header>

<h1><%= current_user.email %></h1>
<%= link_to 'Back', restaurants_path %>
<div class="row">
        <div class="column">
          <h2>Votes</h2>
          <table>
          <thead>
            <tr>
              <th>Restaurant &nbsp &nbsp</th>
              <th>Vote</th>
              <th colspan="3"></th>
            </tr>
          </thead>

            <% @votes.each do |vote| %>
              <tr>
                <td><%= vote.restaurant.name %></td>
                <% if vote.willSplit %>
                <td>will split</td>
                <% else %>
                <td>will not split</td>
                <% end %>
              </tr>
            <% end %>
          </table>

        </div>
        <div class="column">
            <h2>Favorites</h2>
            <table>
            <thead>
              <tr>
                <th>Restaurant &nbsp &nbsp</th>
                <th>Location</th>
                <th colspan="3"></th>
              </tr>
            </thead>

              <% @favorites.each do |favorite| %>

                <tr>
                  <td><%= favorite.restaurant.name %></td>
                  <td><%= favorite.restaurant.location %></td>
                </tr>
              <% end %>
            </table>
        </div>
        <div class="column">
          <h2>Comments</h2>

          <table>
            <thead>
              <tr>
                <th>Restaurant &nbsp &nbsp</th>
                <th>Comment</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% @comments.each do |comment| %>
              <tr>
                <td><%= comment.restaurant.name %></td>
                <td class="userMessage"><%= comment.commentText %></td>
              </tr>
            <% end %>
          </table>

        </div>
    </div>
<%= link_to 'Back', restaurants_path %>
